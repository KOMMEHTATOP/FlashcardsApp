# ASP.NET Core Configuration
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:8080

# Database (для Docker используй 'db', для localhost используй 'localhost')
ConnectionStrings__DefaultConnection=Host=db;Port=5432;Database=flashcards;Username=postgres;Password=your_password_here

# JWT Settings
Jwt__Key=your-super-secret-jwt-key-minimum-32-characters-long
Jwt__Issuer=FlashcardsApp
Jwt__Audience=FlashcardsAppUsers
Jwt__AccessTokenExpirationMinutes=30
Jwt__RefreshTokenExpirationDays=7

# Auto Migration (true для Docker, false для локальной разработки)
AutoMigrate=true

# CORS (добавь свои фронтенд URL)
Cors__AllowedOrigins__0=http://localhost:5173
Cors__AllowedOrigins__1=http://localhost:3000