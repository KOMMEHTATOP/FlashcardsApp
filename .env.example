# ===========================================
# FlashcardsApp Environment Variables Template
# ===========================================
# Copy this file to .env and fill with your actual values
# NEVER commit .env or env.production to Git!

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# These variables are used by PostgreSQL container
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=FlashcardsDb

# Connection string for .NET application
# Format: Host=db;Port=5432;Database=FlashcardsDb;Username=postgres;Password=your_password
DB_CONNECTION_STRING=Host=db;Port=5432;Database=FlashcardsDb;Username=postgres;Password=your_secure_password_here

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
# Environment: Development, Staging, Production
ASPNETCORE_ENVIRONMENT=Development

# URLs where API listens (inside container)
# Default: http://+:8080 for Docker
ASPNETCORE_URLS=http://+:8080

# ===========================================
# JWT AUTHENTICATION
# ===========================================
# Secret key for JWT token signing (minimum 32 characters recommended)
# Generate with: openssl rand -base64 32
JWT_KEY=your_jwt_secret_key_minimum_32_characters_long_please

# Token expiration in minutes (default: 60 = 1 hour)
JWT_EXPIRATION_MINUTES=60

# ===========================================
# CORS CONFIGURATION
# ===========================================
# Allowed origins for CORS (comma-separated for multiple origins)
# Local development
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ===========================================
# DOCKER PORTS MAPPING
# ===========================================
# External port for PostgreSQL (host machine)
POSTGRES_PORT=5432

# External port for API HTTP (host machine)
API_HTTP_PORT=5153

# External port for API HTTPS (host machine) - if you configure certificates
API_HTTPS_PORT=7112

# ===========================================
# FRONTEND CONFIGURATION (if running locally)
# ===========================================
# API URL for frontend to connect
VITE_API_URL=http://localhost:5153/api

# Application title
VITE_APP_TITLE=FlashcardsLoop
