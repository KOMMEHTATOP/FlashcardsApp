@using FlashcardsBlazorUI.Services
@inject IJSRuntime JSRuntime
@inject ITokenManager TokenManager


@code {
    private bool _initialized;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_initialized)
        {
            _initialized = true;
            await Task.Delay(50);
            try
            {
                var token = TokenManager.Token;
                await JSRuntime.InvokeVoidAsync("dragDropInterop.initializeDragDrop", token);
            }
            catch (Exception ex)
            {
                Console.WriteLine("DragDropInitializer: JS init failed: " + ex.Message);
            }
        }
    }
}