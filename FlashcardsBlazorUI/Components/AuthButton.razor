@using FlashcardsBlazorUI.Interfaces
@using Microsoft.AspNetCore.Components.Authorization
@inject IAuthService AuthService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<AuthorizeView>
    <NotAuthorized>
        <NavLink class="btn btn-outline-light btn-sm me-2" href="/login">
            <span class="bi bi-person-fill"></span> Вход
        </NavLink>
        <NavLink class="btn btn-outline-success btn-sm" href="/register">
            <span class="bi bi-person-plus-fill"></span> Регистрация
        </NavLink>
    </NotAuthorized>
    <Authorized>
        <span class="text-light me-3">@context.User.Identity?.Name</span>
        <button class="btn btn-outline-light btn-sm" @onclick="Logout">
            <span class="bi bi-box-arrow-right"></span> Выход
        </button>
    </Authorized>
</AuthorizeView>

@code {
    private async Task Logout()
    {
        await AuthService.LogoutAsync();
        Navigation.NavigateTo("/login", forceLoad: true);
    }
}