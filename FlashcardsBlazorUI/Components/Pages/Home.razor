@page "/"

<PageTitle>FlashCards</PageTitle>

<h1>Добро пожаловать в FlashCards!</h1>

<p>Это приложение для изучения с помощью карточек.</p>

@if (isAuthenticated)
{
    <a href="/groups" class="btn btn-primary">Перейти к моим группам</a>
}
else
{
    <a href="/login" class="btn btn-primary">Войти в систему</a>
}

@code {
    private bool isAuthenticated = false;

    protected override async Task OnInitializedAsync()
    {
        // Простая проверка - можно улучшить позже
        isAuthenticated = true; // Пока так, потом добавишь правильную проверку
    }
}