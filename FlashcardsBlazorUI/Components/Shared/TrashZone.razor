@namespace FlashcardsBlazorUI.Components.Shared

<div class="position-fixed @CssClass" style="@GetPositionStyle()">
    <div class="card h-100 border-danger text-center" style="border-width:3px; border-style:dashed; background-color:rgba(255,255,255,0.95);">
        <div class="card-body d-flex flex-column align-items-center justify-content-center text-danger">
            <i class="bi bi-trash" style="font-size:32px; margin-bottom:5px;"></i>
            <small>Удалить</small>
        </div>
    </div>
</div>

@code {
    [Parameter] public string Position { get; set; } = "bottom-right";
    [Parameter] public string CssClass { get; set; } = "";
    [Parameter] public int Width { get; set; } = 120;
    [Parameter] public int Height { get; set; } = 120;
    [Parameter] public int Offset { get; set; } = 30;

    private string GetPositionStyle()
    {
        var position = Position.ToLower() switch
        {
            "bottom-left" => $"bottom:{Offset}px; left:{Offset}px;",
            "bottom-right" => $"bottom:{Offset}px; right:{Offset}px;",
            "top-left" => $"top:{Offset}px; left:{Offset}px;",
            "top-right" => $"top:{Offset}px; right:{Offset}px;",
            _ => $"bottom:{Offset}px; right:{Offset}px;" // default
        };

        return $"{position} z-index:1000; width:{Width}px; height:{Height}px;";
    }
}